<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jycoders.newssummarizer.MainActivity"
    tools:showIn="@layout/activity_main">

    <!--Introductory Paragraph to the News Summarizer App-->
    <TextView
        android:id="@+id/nwstext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/nwspaper"
        android:layout_margin="16dp"
        android:gravity="center_horizontal"
        android:text="@string/app_sum"
        android:textSize="15dp"/>

    <!--Image of a man with a newspaper-->
    <ImageView
        android:id="@+id/nwspaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/newspaper"/>

    <!--Button that leads to the app functions-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below ="@+id/nwstext"
        android:layout_centerInParent="true"
        android:text="@string/introButton"
        android:onClick="toSearch"/>

</RelativeLayout>
